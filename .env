MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Payment Gateway Configuration (for future use)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
